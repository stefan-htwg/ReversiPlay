# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.Application.index()
GET     /hello/:name                controllers.Application.hello(name: String)
POST    /postname                   controllers.Application.postname()
POST    /posthello                  controllers.Application.posthello()
GET     /form                       controllers.Application.form()

#Game Actions

POST    /game/start                 controllers.Application.start()
POST    /game/restart               controllers.Application.restart()
POST    /game/move                  controllers.Application.move()
GET     /game/load                  controllers.Application.load()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /webjars/*file              controllers.WebJarAssets.at(file)
